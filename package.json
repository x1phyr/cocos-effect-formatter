{
    "name": "cocos-effect-formatter",
    "displayName": "Cocos Effect Formatter",
    "description": "formatting cocos creator effect file",
    "version": "0.0.2",
    "publisher": "x1phyr",
    "engines": {
        "vscode": "^1.86.0"
    },
    "categories": [
        "Formatters"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/x1phyr/cocos-effect-formatter/issues",
        "email": "martinae@microsoft.com"
    },
    "homepage": "https://github.com/x1phyr/cocos-effect-formatter/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/x1phyr/cocos-effect-formatter"
    },
    "activationEvents": [
        "onLanguage"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cocos-effect",
                "aliases": [
                    "Cocos Effect"
                ],
                "extensions": [
                    "effect"
                ]
            }
        ],
        "configuration": {
            "title": "Cocos Effect Formatter",
            "properties": {
                "cocosEffectFormatter.useCocosProgramIndent": {
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/prettier": "^2.7.2",
        "@types/vscode": "^1.86.0",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "prettier": "^2.8.8"
    }
}
